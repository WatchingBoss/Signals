[flake8]
# E501: line too long (will address later if necessary)
# W503: line break before binary operator (often preferred for readability)
# F401: module imported but unused (can be an issue, but let's start less strict)
# F841: local variable is assigned to but never used
ignore = E501, W503, F401, F841
max-complexity = 10
exclude = .git,__pycache__,env,venv

# Show source code in output
show-source = true

# Enable PyFlakes and McCabe complexity plugin
enable-extensions = B,C,E,F,W,T4,B9

# B (flake8-bugbear) options
# B950: line too long (handled by E501 ignore for now)
# B008: Do not perform function calls in argument defaults. (Good practice)
# Select all B, B9 except B950
select = B,C,E,F,W,T4,B9
# ignore = B950
